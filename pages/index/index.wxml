<swiper class="slides">
  <swiper-item wx:for="{{slides}}" wx:key="id">
     <image src="{{item.image}}" mode="aspectFill" />
  </swiper-item>
</swiper>

<view class="grids">
  <navigator class="item" wx:for="{{categories}}" wx:key='id' url="/pages/list/list?cat={{item.id}}">
     <image src="{{item.icon}}" />
     <text>{{item.name}}</text>
  </navigator>
</view>

<view class="alllinks">
<view class="links">
    <image src="../../images/link-01.png" />
</view>
<view class="links">
    <image src="../../images/link-02.png" />
</view>
</view>

